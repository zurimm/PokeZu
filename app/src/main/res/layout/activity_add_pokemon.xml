<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Botón para volver -->
    <Button
        android:id="@+id/buttonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textColor="@android:color/white"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Campo para el nombre del Pokémon -->
    <EditText
        android:id="@+id/editTextPokemonName"
        android:layout_marginTop="55dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Campo para el tipo del Pokémon -->
    <EditText
        android:id="@+id/editTextPokemonType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPokemonName" />

    <!-- Campo para la vida del Pokémon -->
    <EditText
        android:id="@+id/editTextPokemonLife"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Vida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPokemonType" />

    <!-- Campo para el ataque del Pokémon -->
    <EditText
        android:id="@+id/editTextPokemonAttack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Ataque"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPokemonLife" />

    <!-- Campo para la defensa del Pokémon -->
    <EditText
        android:id="@+id/editTextPokemonDefense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Defensa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPokemonAttack" />

    <!-- Campo para la resistencia del Pokémon -->
    <EditText
        android:id="@+id/editTextPokemonResistance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Resistencia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPokemonDefense" />

    <!-- Botón para guardar el Pokémon -->
    <Button
        android:id="@+id/buttonSavePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPokemonResistance" />

</androidx.constraintlayout.widget.ConstraintLayout>
